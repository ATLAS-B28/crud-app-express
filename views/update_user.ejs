<%- include('partials/_header') %>
<main id="main-section">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> All User</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-light">Update the user details</span>
    </div>
    <form id="update_user" method="POST">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= users._id %> " />
          <input
            type="text"
            name="name"
            value="<%= users.name %> "
            placeholder="User name"
          />
        </div>

        <div class="form-group">
          <label for="email" class="text-light">Email</label>
          <input
            type="text"
            name="email"
            value="<%= users.email %>"
            placeholder="Email"
          />
        </div>

        <div class="form-group">
          <label for="gender" class="text-light">Gender</label>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="gender" value="Male" <%= users.gender == 'male' ? 'checked':'' %>  />
            <label for="radio-2" class="radio-label">Male</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-3" name="gender" value="Female" <%= users.gender == 'female' ? 'checked':'' %>/>
            <label for="radio-3" class="radio-label">Female</label>
          </div>
        </div>
        <div class="form-group">
          <label for="" class="text-light">Address</label>
          <input
          type="text"
          name="address"
          value="<%= users.address %> "
          placeholder="Address"
        />
        </div>

        <div class="form-group">
          <label for="gender" class="text-light">Status</label>
          <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="Active" <%= users.status == 'active'?'checked':'' %>/>
            <label for="radio-4" class="radio-label">Active</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="Inactive" <%= users.status == 'inactive'?'checked':'' %> />
            <label for="radio-5" class="radio-label">Inactive</label>
          </div>

          <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</main>
<%- include('partials/_footer') %>
